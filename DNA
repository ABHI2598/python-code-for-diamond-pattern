n=int(input("Enter Width:\n"))
for g in range(99):
    for i in range(0,n):
        if n%2==0:
            print(" "*(2*i)+"\\"+"_"*(4*(n-i))+"/")
        else:
            print(" "*(2*i)+"\\"+"_"*(4*(n-i)-1)+"/")
    print(" "*(2*n)+"\\"+"/")
    print(" "*(2*n)+"/"+"\\")
    for j in range(0,n):
        print(" "*(2*(n-j-1))+"/"+"_"*(n+4*j)+"\\")
